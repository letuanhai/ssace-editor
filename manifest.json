{
  "manifest_version": 3,
  "name": "SAS Studio-Ace Editor",
  "version": "1.0",
  "description": "Use Ace editor to edit files in SAS Studio",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_title": "Activate editor"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+Period"
      }
    }
  },
  "background": {
    "service_worker": "sw.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "editor-container.js"
      ],
      "css": [
        "editor-container.css"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "lib/*.js",
        "editor.js",
        "editor.html"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}