{
  "manifest_version": 3,
  "name": "SAS Studio Editor",
  "version": "1.0",
  "description": "Use Ace editor with Vim keybindings and SQL mode to edit current file in SAS Studio",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_title": "Activate Editor"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+Period"
      }
    }
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "css": [
        "editor.css"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "editor.html",
        "editor.js",
        "lib/*.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}